import tkinter as tk

janela = tk.Tk()
janela.geometry('1080x640+0+0')
janela.title('SUPER AÇAI')

Frame_Top = tk.Frame()
Frame_Top.place(relx= 0,rely=0.003,relwidth=1, relheight=1)
Frame_Top.configure(relief= 'raised')
Frame_Top.configure(borderwidth = '8')
Frame_Top.configure(relief="raised")
Frame_Top.configure(background="#6d32a8")

label_nome = tk.Label()
label_nome.place(relx= 0.005,rely=0.01,relwidth=1, relheight=0.08)
label_nome.configure(background="#d9d9d9")
label_nome.configure(disabledforeground="black")
label_nome.configure(font='-family{segoe UI}- size 150')
label_nome.configure(foreground='black')
label_nome.configure(relief= 'raised')
label_nome.configure(borderwidth = '4')
label_nome.configure(relief="raised")
label_nome.configure(text="SUPER AÇAI")


